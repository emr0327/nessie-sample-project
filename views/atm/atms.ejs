<h1>Capital One ATM Locations</h1>

<% if (atms.length > 0) { %>
  <% atms.forEach((atm, index) => { %>
    <!-- Check for first card, opening card-deck div, new card div -->
    <% if (index == 0) { %>
      <!-- Beginning of Card deck -->
      <div class="card-deck">
        <!-- Card -->
        <div class="card mb-4">
          <!--Card image-->
          <div class="view overlay">
            <img class="card-img-top" src="https://mdbootstrap.com/img/Photos/Others/images/16.jpg" alt="Card image cap">
            <a href="#!">
              <div class="mask rgba-white-slight"></div>
            </a>
          </div>
          <!--Card content-->
          <div class="card-body">
            <!--Title-->
            <h4 class="card-title"><%= atm.name %></h4>
            <!--Text-->
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's
              content.</p>
            <!-- Provides extra visual weight and identifies the primary action in a set of buttons -->
            <button type="button" class="btn btn-light-blue btn-md">Read more</button>
          </div>
        </div>
        <!-- Card -->
    <!-- Closing card-deck div, new card-div -->
    <% } else if (index % 2 == 0) { %>
      </div>
      <!-- End of Card deck -->
      <!-- Beginning of Card deck -->
      <div class="card-deck">
        <!-- Card -->
        <div class="card mb-4">
          <!--Card image-->
          <div class="view overlay">
            <img class="card-img-top" src="https://mdbootstrap.com/img/Photos/Others/images/16.jpg" alt="Card image cap">
            <a href="#!">
              <div class="mask rgba-white-slight"></div>
            </a>
          </div>
          <!--Card content-->
          <div class="card-body">
            <!--Title-->
            <h4 class="card-title"><%= atm.name %></h4>
            <!--Text-->
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's
              content.</p>
            <!-- Provides extra visual weight and identifies the primary action in a set of buttons -->
            <button type="button" class="btn btn-light-blue btn-md">Read more</button>
          </div>
        </div>
        <!-- Card -->
    <% } else { %>
      <!-- Just add a new card -->
      <!-- Card -->
      <div class="card mb-4">
        <!--Card image-->
        <div class="view overlay">
          <img class="card-img-top" src="https://mdbootstrap.com/img/Photos/Others/images/16.jpg" alt="Card image cap">
          <a href="#!">
            <div class="mask rgba-white-slight"></div>
          </a>
        </div>
        <!--Card content-->
        <div class="card-body">
          <!--Title-->
          <h4 class="card-title"><%= atm.name %></h4>
          <!--Text-->
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's
            content.</p>
          <!-- Provides extra visual weight and identifies the primary action in a set of buttons -->
          <button type="button" class="btn btn-light-blue btn-md">Read more</button>
        </div>
      </div>
      <!-- Card -->
    <% } %>
  <% }) %>
<% } else { %>
    <h2>Looks like ther are no ATMs near your area. Sorry!</h2>
  <% } %>