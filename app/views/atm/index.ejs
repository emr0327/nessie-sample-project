<h1>Find Capital One ATM Locations</h1>

<form action="/profile/atms" method="POST" class="form-inline">
  <div class="form-group col-sm-4">
    <label>Please enter your zip code:</label>
    <input type="text" name="zipcode" placeholder="22103" pattern="[0-9]{5}" title="5 digit zipcode" maxlength="5" required>
  </div>
  <div class="form-group col-sm-2">
    <label for="validationDefault01">Radius:</label>
    <select name="radius" id="validationDefault01" class="browser-default custom-select mb-2" required>
      <option value="5" selected>5</option>
      <option value="10">10</option>
      <option value="15">15</option>
      <option value="20">20</option>
      <option value="25">25</option>
    </select>
  </div>
  <div class="form-group col-sm-2">
      <input type="submit" class="btn btn-primary" value="Enter">
  </div>
</form>